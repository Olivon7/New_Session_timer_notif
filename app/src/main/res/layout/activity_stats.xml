<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.StatsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="411dp"
        android:layout_height="169dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/day_3"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:backgroundTint="@color/button_grey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/day_4"
                app:layout_constraintHorizontal_bias="0.941"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.874" />

            <Button
                android:id="@+id/day_7"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:backgroundTint="@color/button_grey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"

                android:textColorHighlight="#101010"
                android:textColorLink="#000000"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/next_week_button"
                app:layout_constraintHorizontal_bias="0.91"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.874" />

            <Button
                android:id="@+id/day_1"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:backgroundTint="@color/button_grey"
                android:elevation="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="13sp"
                app:iconPadding="0dp"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/day_2"
                app:layout_constraintHorizontal_bias="0.833"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.874"
                app:rippleColor="#FFFFFF" />

            <Button
                android:id="@+id/day_2"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="3dp"
                android:backgroundTint="@color/button_grey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/day_3"
                app:layout_constraintHorizontal_bias="0.928"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.874" />

            <Button
                android:id="@+id/day_5"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="3dp"
                android:backgroundTint="@color/button_grey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/day_6"
                app:layout_constraintHorizontal_bias="0.966"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.874" />

            <Button
                android:id="@+id/day_6"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/button_grey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/day_7"
                app:layout_constraintHorizontal_bias="0.972"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.874" />

            <TextView
                android:id="@+id/textView"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="42dp"
                android:layout_height="17dp"
                android:text="Sun"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/day_1"
                app:layout_constraintEnd_toEndOf="@+id/day_1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/day_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.968" />

            <TextView
                android:id="@+id/textView2"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="42dp"
                android:layout_height="17dp"
                android:text="Mon"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/day_2"
                app:layout_constraintEnd_toEndOf="@+id/day_2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/day_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.968" />

            <TextView
                android:id="@+id/textView3"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="42dp"
                android:layout_height="17dp"
                android:layout_marginStart="100dp"
                android:text="Tue"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/day_3"
                app:layout_constraintEnd_toEndOf="@+id/day_3"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.968" />

            <TextView
                android:id="@+id/textView4"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="42dp"
                android:layout_height="19dp"
                android:layout_marginStart="100dp"
                android:text="Wed"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/day_2"
                app:layout_constraintEnd_toEndOf="@+id/day_4"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.989" />

            <TextView
                android:id="@+id/textView5"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="42dp"
                android:layout_height="19dp"
                android:layout_marginStart="100dp"
                android:text="Thu"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/day_2"
                app:layout_constraintEnd_toEndOf="@+id/day_5"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.989" />

            <TextView
                android:id="@+id/textView6"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="42dp"
                android:layout_height="19dp"
                android:layout_marginStart="100dp"
                android:text="Fri"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/day_2"
                app:layout_constraintEnd_toEndOf="@+id/day_6"
                app:layout_constraintHorizontal_bias="0.994"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.989" />

            <TextView
                android:id="@+id/textView7"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="42dp"
                android:layout_height="19dp"
                android:layout_marginStart="100dp"
                android:text="Sat"
                android:textAlignment="center"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/day_2"
                app:layout_constraintEnd_toEndOf="@+id/day_7"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.989" />

            <Button
                android:id="@+id/next_week_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75" />

            <ImageView
                android:id="@+id/icon_right_arrow"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/right_arrow_foreground"
                app:layout_constraintBottom_toBottomOf="@+id/day_7"
                app:layout_constraintEnd_toEndOf="@+id/next_week_button"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/next_week_button"
                app:layout_constraintTop_toTopOf="@+id/day_7"
                app:layout_constraintVertical_bias="0.0"
                app:tint="#0B0B0B"
                tools:srcCompat="@mipmap/right_arrow_foreground" />

            <Button
                android:id="@+id/prev_week_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="31dp"
                android:layout_height="44dp"

                android:backgroundTint="@android:color/transparent"
                android:elevation="100dp"
                app:icon="@mipmap/right_arrow_foreground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/day_1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.768"
                app:strokeColor="#FFFFFF" />

            <ImageView
                android:id="@+id/icon_left_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/left_arrow_foreground"
                app:layout_constraintBottom_toBottomOf="@+id/day_1"
                app:layout_constraintEnd_toEndOf="@+id/prev_week_button"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/prev_week_button"
                app:layout_constraintTop_toTopOf="@+id/day_1"
                app:layout_constraintVertical_bias="0.0"
                app:tint="#0B0B0B"
                tools:srcCompat="@mipmap/left_arrow_foreground" />

            <Button
                android:id="@+id/day_4"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/button_grey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/day_5"
                app:layout_constraintHorizontal_bias="0.962"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.874" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="177dp"
                android:layout_height="32dp"
                android:text="Your Statistics"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.128"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.284" />

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="111dp"
                android:layout_height="21dp"
                android:text="Your Statistics"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/stats_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.946"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.331" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="561dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="376dp"
                android:layout_height="289dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:id="@+id/uvindex_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Current UV Index: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.071"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_chart"
                app:layout_constraintVertical_bias="0.039" />

            <TextView
                android:id="@+id/severity_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Severity:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.078"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uvindex_id"
                app:layout_constraintVertical_bias="0.156" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>